<config>
    <modules>
        <Mind_Category>
            <version>0.1.0</version>
        </Mind_Category>
    </modules>
    <frontend>
        <routers>
            <category>
                <use>standard</use>
                <args>
                    <module>Mind_Category</module>
                    <frontName>category</frontName>
                </args>
            </category>
        </routers>
        <layout>
            <updates>
                <category>
                    <file>category.xml</file>
                </category>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<category>
				<use>admin</use>
				<args>
					<module>Mind_Category</module>
					<frontName>category</frontName>
				</args>
			</category>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<category module="category">
				<title>Product/Category</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="category">
						<title>Category</title>
						<sort_order>0</sort_order>
						<action>category/adminhtml_category</action>
					</items>
					<itemsa module="product">
						<title>Product</title>
						<sort_order>0</sort_order>
						<action>product/adminhtml_product</action>
					</itemsa>					
				</children>
			</category>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Mind_Category>
							<title>Category Module</title>
							<sort_order>10</sort_order>
						</Mind_Category>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<category>
					<file>category.xml</file>
				</category>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <category>
                <class>Mind_Category_Model</class>
                <resourceModel>category_mysql4</resourceModel>
            </category>
            <category_mysql4>
                <class>Mind_Category_Model_Mysql4</class>
                <entities>
                    <category>
                        <table>category</table>
                    </category>
                </entities>
            </category_mysql4>
        </models>
        <resources>
            <category_setup>
                <setup>
                    <module>Mind_Category</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </category_setup>
            <category_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </category_write>
            <category_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </category_read>
        </resources>
        <blocks>
            <category>
                <class>Mind_Category_Block</class>
            </category>
        </blocks>
        <helpers>
            <category>
                <class>Mind_Category_Helper</class>
            </category>
        </helpers>
    </global>
</config>
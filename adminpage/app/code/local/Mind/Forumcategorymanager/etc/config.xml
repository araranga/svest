<config>
    <modules>
        <Mind_Forumcategorymanager>
            <version>0.1.0</version>
        </Mind_Forumcategorymanager>
    </modules>
    <frontend>
        <routers>
            <forumcategorymanager>
                <use>standard</use>
                <args>
                    <module>Mind_Forumcategorymanager</module>
                    <frontName>forumcategorymanager</frontName>
                </args>
            </forumcategorymanager>
        </routers>
        <layout>
            <updates>
                <forumcategorymanager>
                    <file>forumcategorymanager.xml</file>
                </forumcategorymanager>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<forumcategorymanager>
				<use>admin</use>
				<args>
					<module>Mind_Forumcategorymanager</module>
					<frontName>forumcategorymanager</frontName>
				</args>
			</forumcategorymanager>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<forumcategorymanager module="forumcategorymanager">
				<title>Forum Settings</title>
				<sort_order>71</sort_order>               
				<children>
					<firstpage module="forumcategorymanager">
						<title>Forum Category</title>
						<sort_order>0</sort_order>
						<action>forumcategorymanager/adminhtml_forumcategorymanager</action>
					</firstpage>
                    <secondpage module="forummanager">
                        <title>Forum Threads</title>
                        <sort_order>0</sort_order>
                        <action>forummanager/adminhtml_forummanager</action>
                    </secondpage>                    
				</children>
			</forumcategorymanager>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Mind_Forumcategorymanager>
							<title>Forumcategorymanager Module</title>
							<sort_order>10</sort_order>
						</Mind_Forumcategorymanager>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<forumcategorymanager>
					<file>forumcategorymanager.xml</file>
				</forumcategorymanager>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <forumcategorymanager>
                <class>Mind_Forumcategorymanager_Model</class>
                <resourceModel>forumcategorymanager_mysql4</resourceModel>
            </forumcategorymanager>
            <forumcategorymanager_mysql4>
                <class>Mind_Forumcategorymanager_Model_Mysql4</class>
                <entities>
                    <forumcategorymanager>
                        <table>forumcategorymanager</table>
                    </forumcategorymanager>
                </entities>
            </forumcategorymanager_mysql4>
        </models>
        <resources>
            <forumcategorymanager_setup>
                <setup>
                    <module>Mind_Forumcategorymanager</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </forumcategorymanager_setup>
            <forumcategorymanager_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </forumcategorymanager_write>
            <forumcategorymanager_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </forumcategorymanager_read>
        </resources>
        <blocks>
            <forumcategorymanager>
                <class>Mind_Forumcategorymanager_Block</class>
            </forumcategorymanager>
        </blocks>
        <helpers>
            <forumcategorymanager>
                <class>Mind_Forumcategorymanager_Helper</class>
            </forumcategorymanager>
        </helpers>
    </global>
</config>